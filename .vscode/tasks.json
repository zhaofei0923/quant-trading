{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:all (Release)",
      "type": "shell",
      "command": "bash shell/build_all.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build:strategy (Release)",
      "type": "shell",
      "command": "cmake --build --preset build-release",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build:market (Release)",
      "type": "shell",
      "command": "cmake --build --preset market-build-release",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build:trade (Release)",
      "type": "shell",
      "command": "cmake --build --preset trade-build-release",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "run:start.sh",
      "type": "shell",
      "command": "bash shell/start.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}

